<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacground_login"
    tools:context=".presentaion.home.main.MainFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigation_rail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_gps_sid_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_gps_sidbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_gps_sid_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dofusdu"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_gps_sid_bar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_key_side_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_sidbar_key"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_gps_sid_bar" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_key_side_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dofusdu"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_key_side_bar"
            app:layout_constraintTop_toBottomOf="@+id/img_gps_sid_bar"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_chat_side_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/img_key_side_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_sidbar_chat"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_chat_side_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dofusdu"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_key_side_bar"
            app:layout_constraintStart_toEndOf="@id/img_chat_side_bar"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_favorite_side_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/img_chat_side_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_favorite_sidbar"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_favorite_side_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dofusdu"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_chat_side_bar"
            app:layout_constraintStart_toEndOf="@id/img_favorite_side_bar"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>




        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_cup_side_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/img_favorite_side_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_sidebar_cup"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_cup_side_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="dofusdu"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_cup_side_bar"
            app:layout_constraintTop_toBottomOf="@+id/img_favorite_side_bar" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_door"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/icon_door"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/img_open"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/arrow_open"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/view_balance_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_no_task"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline40"
        app:layout_constraintEnd_toStartOf="@+id/view_balance_page"
        app:layout_constraintStart_toEndOf="@+id/navigation_rail"
        android:backgroundTint="@color/dark_gray">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_clock"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:src="@drawable/clock"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_task"
                android:textColor="@color/gray"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_clock" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/shape_button"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:text="@string/random_task"
                android:textSize="25sp"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />







        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_country"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/guideline40"
        app:layout_constraintBottom_toTopOf="@id/guideline80"
        app:layout_constraintEnd_toStartOf="@+id/view_balance_page"
        app:layout_constraintStart_toEndOf="@+id/navigation_rail"
        android:backgroundTint="#00FFFFFF" >




        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/country_kazan"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_word_skill"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/card_view_country"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/country_kazan"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_test"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/guideline40"
            app:layout_constraintEnd_toEndOf="@id/view_balance_page"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/country_kazan"
            android:scaleType="fitXY"/>










</androidx.constraintlayout.widget.ConstraintLayout>